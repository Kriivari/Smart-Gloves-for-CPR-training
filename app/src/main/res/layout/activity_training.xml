<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aalto.movesense.smartgloves4cpr.TrainingActivity">

    <TextView
        android:id="@+id/depth"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginEnd="4dp"
        android:text="@string/freq"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:id="@+id/freq"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="644dp"
        android:text="@string/freq"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_data"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/freqBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="620dp"
        android:layout_height="169dp"
        android:layout_marginStart="4dp"
        android:alpha="100"
        android:background="#009E37"
        android:max="220"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp" />

    <ProgressBar
        android:id="@+id/depthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="639dp"
        android:layout_height="169dp"
        android:alpha="20"
        android:background="#F0E442"
        android:max="10"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/savetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saving"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="268dp" />

</android.support.constraint.ConstraintLayout>